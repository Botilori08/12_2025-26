                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="0"/>
                                <RotateTransform/>
                                <TranslateTransform X="0"/>
                            </TransformGroup>
                        </TextBox.RenderTransform>
                    </TextBox>
                    <Button Content="Küldés" HorizontalAlignment="Left" Margin="539,140,0,0" VerticalAlignment="Top" Width="76" Height="34" Click="Button_Click" Background="#FF3A3A3A" Foreground="White"/>
                    <TextBlock x:Name="Kiir" HorizontalAlignment="Left" Height="121" Margin="257,284,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="398" FontSize="20"/>
                    <Image HorizontalAlignment="Left" Height="140" Margin="42,87,0,0" VerticalAlignment="Top" Width="147" Source="/tl.png"/>


                </Grid>

            </TabItem>
            <TabItem Header="Szövegvágás">
                <Grid Background="Black">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="113*"/>
                        <RowDefinition Height="293*"/>
                    </Grid.RowDefinitions>
                    <Slider x:Name="kezde" Margin="58,71,504,13" Maximum="7" Foreground="White" />
                    <Slider x:Name="vege" Margin="58,105,504,272" Maximum="7" Grid.RowSpan="2" />
                    <Label Content="" HorizontalAlignment="Left" Margin="305,59,0,0" VerticalAlignment="Top" Foreground="White" FontSize="20"/>
                    <Label Content="" HorizontalAlignment="Left" Margin="305,93,0,0" VerticalAlignment="Top" Foreground="White" FontSize="20" Grid.RowSpan="2"/>
                    <TextBox TextWrapping="Wrap" Text="TextBox" Margin="58,61,504,203" Grid.Row="1" FontSize="16"/>
                    <TextBox TextWrapping="Wrap" Text="TextBox" Margin="58,117,504,146" Grid.Row="1" FontSize="16"/>

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
