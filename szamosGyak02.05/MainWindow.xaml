    <Grid>
        <TabControl>
            <TabItem Header="Számolás">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="Szam1" HorizontalAlignment="Left" Height="34" Margin="256,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="238" FontSize="20" RenderTransformOrigin="0.5,0.5">
