                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="0"/>
                                <RotateTransform/>
                                <TranslateTransform X="0"/>
                            </TransformGroup>
                        </TextBox.RenderTransform>
                    </TextBox>

                    <TextBox x:Name="Szam2" HorizontalAlignment="Left" Height="34" Margin="257,140,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="237" FontSize="20" RenderTransformOrigin="0.5,0.5">
