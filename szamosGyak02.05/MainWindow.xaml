                                <TranslateTransform X="0"/>
                            </TransformGroup>
                        </TextBox.RenderTransform>
                    </TextBox>
                    <TextBox x:Name="Szam3" HorizontalAlignment="Left" Height="34" Margin="257,217,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="237" FontSize="20" RenderTransformOrigin="0.5,0.5">
